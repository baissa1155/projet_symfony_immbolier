{% extends "base.html.twig" %}

{% block body %}
	<style>
		.formulaire {
			background-color: #212E53;
		}
	</style>
	<div class="jumbotron jumbotron-fluid">
		<marquee>
			<h1 style="color:#CFB398; font-weight:bold" class="display-4 text-center">Page de connexion</h1>
		</marquee>
	</div>
	<hr>
	<div class="formulaire">
		<div class="row justify-content-center">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-3" style="width: 1000px">
					<div class="card-body">

						<div class="card-header mb-3">Connexion</div>

						<form class="form" action="{{ path('connexion') }}" method="post">

							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="InputEmail">Email address</label>
									<input id="username" placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
								</div>
							</div>

							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="InputPassword">Mot de passe</label>
									<input id="password" placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
									<button type="submit" class="btn btn-block mybtn btn-primary tx-tfm">Connexion</button>
								</div>
							</div>

							<div class="form-group">
								<p class="text-center">Vous n'avez pas de compte?
									<a href="{{ path('inscription') }}" id="signup">Inscrivez-vous ici</a>
								</p>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
