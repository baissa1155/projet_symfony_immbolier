{% extends 'base.html.twig' %}

{% block title %}Contact Agence
{% endblock %}

{% block body %}
	<style>
		.formulaire {
			background-color: #212E53;
		}
	</style>
	<div class="jumbotron jumbotron-fluid">
		<marquee>
			<h1 style="color:#CFB398; font-weight:bold" class="display-4 text-center">Page de contact</h1>
		</marquee>
		<hr>
	</div>
	<div class="formulaire">
		<div class="row justify-content-center">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-3" style="width: 1000px">
					<div class="card-body">

						<div class="card-header mb-3">Contactez-nous</div>

						<form class="form" action="{{ path('contact') }}" method="post">

							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="prenom">Votre prenom</label>
									<input id="prenom" placeholder="prenom" required name="_prenom" type="text" class="form-control">
								</div>
							</div>

							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="nom">Votre nom</label>
									<input id="nom" placeholder="Nom" required name="_password" type="text" class="form-control">
								</div>
							</div>
							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="phone">Votre numéro de téléphone
									</label>
									<input id="phone" placeholder="+221 77 100 00 00" required name="_phone" type="text" class="form-control">
								</div>
							</div>
							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="mail">Votre mail
									</label>
									<input id="mail" placeholder="Email" required name="_email" type="text" class="form-control">
								</div>
							</div>
							<div class="form_group">
								<div class="col-md-12 mb-3">
									<label for="message">Votre message
									</label>
									<input id="message" placeholder="contenu de votre message" required name="_message" type="text" class="form-control">
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
									<button type="submit" class="btn btn-block mybtn btn-primary tx-tfm">Envoyer</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
